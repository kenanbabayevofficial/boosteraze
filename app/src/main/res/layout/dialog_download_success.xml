<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/card_background">

    <!-- Success Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅"
            android:textSize="32sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="İndirme Tamamlandı!"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Video Title -->
    <TextView
        android:id="@+id/tvVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Başlığı"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- File Information Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/surface_light"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- File Info -->
            <TextView
                android:id="@+id/tvFileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📁 dosya.mp4\n💾 15.2 MB"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Download Location -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📂 DCIM/SnapTikPro"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Play Video Button -->
        <Button
            android:id="@+id/btnPlayVideo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="▶️ Videoyu Oynat"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginBottom="8dp" />

        <!-- View Downloads Button -->
        <Button
            android:id="@+id/btnViewDownloads"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="📁 İndirmeleri Görüntüle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginBottom="8dp" />

        <!-- Share Video Button -->
        <Button
            android:id="@+id/btnShareVideo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="📤 Videoyu Paylaş"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginBottom="8dp" />

        <!-- Download Another Button -->
        <Button
            android:id="@+id/btnDownloadAnother"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="➕ Başka Video İndir"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginBottom="8dp" />

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="✖️ Kapat"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@color/surface_light"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</LinearLayout>