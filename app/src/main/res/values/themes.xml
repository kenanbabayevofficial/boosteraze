<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TRLike" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/primary_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_red</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_red</item>
    </style>
    
    <style name="Theme.TRLike.Splash" parent="Theme.TRLike">
        <item name="android:windowBackground">@color/primary_red</item>
        <item name="android:statusBarColor">@color/primary_red</item>
        <item name="android:navigationBarColor">@color/primary_red</item>
    </style>
</resources>