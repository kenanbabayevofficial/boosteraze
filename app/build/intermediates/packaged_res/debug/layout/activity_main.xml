<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

               <!-- Header -->
           <LinearLayout
               android:id="@+id/headerLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/primary"
               android:elevation="4dp"
               android:orientation="horizontal"
               android:padding="16dp"
               app:layout_constraintTop_toTopOf="parent">

                       <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="@string/app_name"
                   android:textColor="@color/text_primary"
                   android:textSize="24sp"
                   android:textStyle="bold" />

                       <ImageView
                   android:id="@+id/ivDownloads"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginEnd="16dp"
                   android:background="?attr/selectableItemBackgroundBorderless"
                   android:padding="4dp"
                   android:src="@drawable/ic_download" />

               <ImageView
                   android:id="@+id/ivSettings"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_marginEnd="16dp"
                   android:background="?attr/selectableItemBackgroundBorderless"
                   android:padding="4dp"
                   android:src="@drawable/ic_settings" />

               <ImageView
                   android:id="@+id/ivHelp"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="?attr/selectableItemBackgroundBorderless"
                   android:padding="4dp"
                   android:src="@drawable/ic_help" />

    </LinearLayout>

               <!-- Main Content -->
           <androidx.cardview.widget.CardView
               android:id="@+id/cardMain"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_margin="24dp"
               app:cardBackgroundColor="@color/card_background"
               app:cardCornerRadius="16dp"
               app:cardElevation="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

                               <!-- Platform Tabs -->
                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="24dp"
                       android:scrollbars="none">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/tvTikTok"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@drawable/tab_background"
                               android:paddingHorizontal="16dp"
                               android:paddingVertical="8dp"
                               android:text="@string/tiktok"
                               android:textColor="@color/text_primary"
                               android:textSize="14sp"
                               android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvInstagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="@string/instagram"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="@string/facebook"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tab_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="@string/twitter"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

            </HorizontalScrollView>

                               <!-- Link Input -->
                   <EditText
                       android:id="@+id/etLink"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@drawable/input_background"
                       android:hint="@string/enter_link"
                       android:inputType="textUri"
                       android:padding="16dp"
                       android:textColor="@color/text_primary"
                       android:textColorHint="@color/text_hint"
                       android:textSize="16sp" />

                               <!-- Download Button -->
                   <Button
                       android:id="@+id/btnDownload"
                       android:layout_width="match_parent"
                       android:layout_height="56dp"
                       android:layout_marginTop="16dp"
                       android:background="@drawable/button_background"
                       android:text="@string/download"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="24dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardMain" />

               <!-- Status Text -->
           <TextView
               android:id="@+id/tvStatus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:textColor="@color/text_secondary"
               android:textSize="14sp"
               android:visibility="gone"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/progressBar" />

           <!-- How to Use Section -->
           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_margin="24dp"
               app:cardBackgroundColor="@color/card_background"
               app:cardCornerRadius="16dp"
               app:cardElevation="8dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="20dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/how_to_use_title"
                       android:textColor="@color/text_primary"
                       android:textSize="18sp"
                       android:textStyle="bold" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="12dp"
                       android:text="@string/how_to_use_description"
                       android:textColor="@color/text_secondary"
                       android:textSize="14sp"
                       android:lineSpacingExtra="4dp" />

               </LinearLayout>

           </androidx.cardview.widget.CardView>

       </androidx.constraintlayout.widget.ConstraintLayout>